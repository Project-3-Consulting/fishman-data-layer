<!-- /templates/collection.liquid -->
{%- assign limit = settings.collection_products_count | plus:0 -%}
{%- assign columns = 4 -%}
{%- assign sidebar-left = settings.sidebar_left_collection -%}
{%- assign sidebar-right = settings.sidebar_right_collection -%}

{%- if settings.collection_view_mode == 'grid' or settings.collection_view_mode == 'divider' -%}
	{%- include 'collection_grid' -%}
{%- else -%}
	{%- include 'collection_list' -%}
{%- endif -%}