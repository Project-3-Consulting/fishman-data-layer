<!-- /templates/customers/register.liquid -->
{%- capture breadcrumb -%}
<section class="page-top page-header-7">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumbs-wrap text-center">
          <ul class="breadcrumb">
            <li class="home">
              <a href="/" title="{{ 'general.breadcrumbs.home_link_title' | t }}" {% if settings.language_enable %}data-translate="general.breadcrumbs.home"{% endif %}>{{ 'general.breadcrumbs.home' | t }}</a>
              <i class="icon-angle-right"></i>
            </li>
            <li> 
              <span>
                {% if settings.language_enable %}
                <span class="lang1">{{ page_title | split: '|' | first  }}</span>
                <span class="lang2">{{ page_title | split: '|' | last }}</span>
                {% else %}
                {{ page_title | split: '|' | first }}
                {% endif %}
              </span>
            </li>
          </ul>
        </div>
        <div class="text-center">
          <h1 class="page-title">
            <span>
              {% if settings.language_enable %}
              <span class="lang1">{{ page_title | split: '|' | first  }}</span>
              <span class="lang2">{{ page_title | split: '|' | last }}</span>
              {% else %}
              {{ page_title | split: '|' | first }}
              {% endif %}
            </span>
          </h1>
        </div>
      </div>
    </div>
  </div>
</section> 
{%- endcapture -%}
{%- if settings.sidebar_move == blank -%}
{{breadcrumb}}
{%- endif -%}
<div class="container">
  <div class="row">
    {%- assign sidebar_class = 'col-lg-3' -%}
    {%- if settings.sidebar_left_account != blank -%}
    {%- assign main_class = 'col-lg-9' -%}
    {%- endif -%} 
    {%- if settings.sidebar_right_account != blank -%}
    {%- assign main_class = 'col-lg-9' -%} 
    {%- endif -%}
    {%- if settings.sidebar_left_account != blank and settings.sidebar_right_account != blank -%}
    {%- assign main_class = 'col-lg-6' -%} 
    {%- endif -%}  
    {%- if settings.sidebar_left_account == blank and settings.sidebar_right_account == blank -%}
    {%- assign main_class = 'col-lg-12' -%} 
    {%- endif -%}
    <div class="{{main_class}} main-content" style="order:2;">
      {%- if settings.sidebar_move != blank -%}
      {{breadcrumb}}
      {%- endif -%}
      <div class="account-login-register">  
        {% form 'create_customer' %} 
        {{ form.errors | default_errors }} 
        <div class="row">
          <div class="col-md-6 mx-auto mb-4">
            <div class="form-box">
              <h3 class="legend" {% if settings.language_enable %}data-translate="customer.register.title"{% endif %}>{{ 'customer.register.title' | t }}</h3>
              <div class="content">
                <ul class="form-list">
                  <li>
                    <label for="FirstName" class="hidden-label"><span {% if settings.language_enable %}data-translate="customer.register.first_name"{% endif %}>{{ 'customer.register.first_name' | t }}</span><em>*</em></label>
                    <input type="text" name="customer[first_name]" id="FirstName" class="input-full" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus required>
                  </li>
                  <li>
                    <label for="LastName" class="hidden-label"><span {% if settings.language_enable %}data-translate="customer.register.last_name"{% endif %}>{{ 'customer.register.last_name' | t }}</span><em>*</em></label>
                    <input type="text" name="customer[last_name]" id="LastName" class="input-full" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words" required>
                  </li>
                  <li>
                    <label for="Email" class="hidden-label"><span {% if settings.language_enable %}data-translate="customer.register.email"{% endif %}>{{ 'customer.register.email' | t }}</span><em>*</em></label>
                    <input type="email" name="customer[email]" id="Email" class="input-full" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off" required>
                  </li>
                  <li>
                    <label for="CreatePassword" class="hidden-label"><span {% if settings.language_enable %}data-translate="customer.register.password"{% endif %}>{{ 'customer.register.password' | t }}</span><em>*</em></label>
                    <input type="password" name="customer[password]" id="CreatePassword" class="input-full" required>
                  </li>
                  <li class="mb-lg-0">
                    <p class="required" {% if settings.language_enable %}data-translate="customer.register.required"{% endif %}>{{ 'customer.register.required' | t }}</p>
                    <button title="{{ 'customer.register.submit' | t }}" class="btn btn-dark w-100">
                      <span  type="submit" {% if settings.language_enable %}data-translate="customer.register.submit"{% endif %}>{{ 'customer.register.submit' | t }}</span>
                    </button>
                  </li>
                </ul>
              </div> 
            </div>
          </div>
          {% endform %}
        </div>
      </div>
    </div>
    {% if settings.sidebar_left_account != blank %}
    <div class="{{sidebar_class}} sidebar col-left">
      {% section 'sidebar-left' %}
    </div>
    {% endif %}  
    {% if settings.sidebar_right_account != blank %}
    <div class="{{sidebar_class}} sidebar-right col-right">
      {% section 'sidebar-right' %}
    </div>
    {% endif %} 
  </div> 
</div>
