<div data-section-id="{{ section.id }}" data-section-type="banner-masonry-section">
  <div id="banner-masonry-{{ section.id }}" style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    {%- if section.settings.section_layout == '0' -%}
    <div class="container">
      {%- endif-%}
      <div class="banner-masonry-grid html-masonry" style="margin: -{{section.settings.item_space | remove: 'px' | append: 'px' }};">
        <div class="grid-sizer" style="flex: {{section.settings.grid_sizer}};max-width: {{section.settings.grid_sizer}};"></div>
        {%- for block in section.blocks -%}
        <div class="masonry-grid-item" style="padding:{{section.settings.item_space | remove: 'px' | append: 'px' }};{% if block.settings.fixed_height != '' %}height: {{block.settings.fixed_height  | remove: 'px' | append: 'px'}};{% endif %}{% if block.settings.fixed_width != '' %}width: {{block.settings.fixed_width}};{% endif %}">
          {%- if block.settings.content != '' -%}
          {%- if settings.language_enable -%}
          <div class="lang1">
            {%- assign content_lg1 = block.settings.content | split: '[lang2]' | first -%}
            {% include 'shortcode' load: content_lg1 %}
          </div>
          <div class="lang2">
            {%- assign content_lg2 = block.settings.content | split: '[lang2]' | last -%}
            {% include 'shortcode' load: content_lg2 %} 
          </div>
          {%- else -%}
          {%- assign content_lg = block.settings.content | split: '[lang2]' | first -%}
          {% include 'shortcode' load: content_lg %}
          {%- endif -%}
          {%- endif -%}
        </div>
        {%- endfor -%}
      </div>
      {%- if section.settings.section_layout == '0' -%}
    </div>
    {%- endif-%}
  </div>
</div>
