{%- if section.settings.faq_payment_enable == blank -%}
<div class="row vc_custom_1496940740070">
  <div class="col-sm-12">
    <div class="vc_column-inner vc_custom_1484657273903">
      <div class="wpb_wrapper">
        <div class="title-wrapper text-left vc_custom_1493369598617">
          <div class="liner-continer porto-products title-border-bottom"> 
            <h3 class="section-title slider-title text-left">
              {% if settings.language_enable %}
              <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
              {% else %}
              {{ section.settings.title | split: '|' | first }}
              {% endif %}
            </h3> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row vc_custom_1496940764002">
  {%- for block in section.blocks -%}
  <div class="col-sm-6">
    <div class="vc_column-inner vc_custom_1484657119633">
      <div class="sp_wrapper">
        {%- for i in (1..3) -%}
        {%- capture title -%}title_{{forloop.index}}{%- endcapture -%}
        {%- capture content -%}answering_{{forloop.index}}{%- endcapture -%}
          {%- if block.settings[title] != '' -%}
          <h3 style="font-size: 14px;text-align: left" class="vc_custom_heading">
            {% if settings.language_enable %}
            <span class="lang1">{{ block.settings[title] | split: '|' | first }}</span>
            <span class="lang2">{{ block.settings[title] | split: '|' | last }}</span>
            {% else %}
            {{ block.settings[title] | split: '|' | first }}
            {% endif %}
          </h3>
          {%- endif -%}
          {%- if block.settings[content] != '' -%}
          <div class="wpb_text_column wpb_content_element ">
            <div class="wpb_wrapper">
              {% if settings.language_enable %}
              <div class="lang1">{{ block.settings[content] | split: '[lang2]' | first }}</div>
              <div class="lang2">{{ block.settings[content] | split: '[lang2]' | last }}</div>
              {% else %}
              {{ block.settings[content] | split: '[lang2]' | first }}
              {% endif %}
            </div>
          </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  {%- endfor -%}
</div>
{%- endif -%}
