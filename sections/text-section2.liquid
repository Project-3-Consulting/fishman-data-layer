<div data-section-id="{{ section.id }}" data-section-type="custom-support-section">
  <div class="custom-support custom-support-{{ section.id }}" style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    <div class="container">
      <div class="shop-features">
        <div class="row">
          {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
          <div class="col-lg-{{block.settings.column_width_desktop}} col-md-{{block.settings.column_width_tablet}} col-sm-{{block.settings.column_width_tablet}} col-xs-{{block.settings.column_width_mobile}}{% if block.settings.column_hidden_tablet != blank %} hidden-md{% endif %}{% if block.settings.column_hidden_mobile != blank %} hidden-xs{% endif%}">
            <div class="porto-support-inner icon-pos-{{block.settings.item_icon_position}}">
              <div class="icon">
              <i class="{{ block.settings.item_icon }}"></i>
              </div>
              <div class="content">
                <h2>
                  {%- if settings.language_enable -%}
                  <span class="lang1">{{ block.settings.item_title | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.item_title | split: '|' | last }}</span>
                  {%- else -%}
                  {{ block.settings.item_title | split: '|' | first }}
                  {%- endif -%}
                </h2>
                {%- if settings.language_enable -%}
                <span class="lang1">{{ block.settings.item_text | split: '|' | first }}</span>
                <span class="lang2">{{ block.settings.item_text | split: '|' | last }}</span>
                {%- else -%}
                {{ block.settings.item_text | split: '|' | first }}
                {%- endif -%}
                {%- if block.settings.item_link != blank and block.settings.item_link_text != '' -%}
                <a href="{{ block.settings.item_link }}" class="btn btn-default">
                  {%- if settings.language_enable -%}
                  <span class="lang1">{{ block.settings.item_link_text | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.item_link_text | split: '|' | last }}</span>
                  {%- else -%}
                  {{ block.settings.item_link_text | split: '|' | first }}
                  {%- endif -%}
                </a>
                {%- endif -%}
              </div>
            </div>
          </div>
          {%- endfor -%}
          {%- else -%}
          <p>No Content</p>
          {%- endif -%}
          <div style="clear: both;"></div>
        </div>
      </div>
    </div>
  </div>
  <style>
    .custom-support-{{ section.id }} {
      background-color: {{section.settings.bg_section_color}};
    }
    .custom-support-{{ section.id }} i {font-size: {{section.settings.icon_font_size}};width: {{section.settings.icon_width | remove: 'px' | append: 'px'}};height: {{section.settings.icon_width | remove: 'px' | append: 'px'}};line-height:{{section.settings.icon_width | remove: 'px' | plus: 0 | minus: 4 | append: 'px'}};color:{{section.settings.icon_color}};{% if section.settings.border_icon_color != blank %}border: 2px solid {{section.settings.border_icon_color}};{% endif %}border-radius:{{section.settings.border_icon_radius}};background-color:{{section.settings.bg_icon_color}};}
    .custom-support-{{ section.id }} .content h2 {color:{{section.settings.title_color}};}
    .custom-support-{{ section.id }} .content em,
    .custom-support-{{ section.id }} .content p{color:{{section.settings.text_color}};}
  </style>
</div>
