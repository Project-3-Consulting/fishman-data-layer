<div class="porto-block-html-top">
  <div class="notice-color-{{settings.notice_text_color}}{% if section.settings.show_button != blank %} d-none{% endif %}">
    <div class="container">
      <div class="row">
        {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'html' -%}
        <div class="col-sm-{{block.settings.item_width_mobile}} col-lg-{{block.settings.item_width_desktop}} col-md-{{block.settings.item_width_tablet}}">
          {%- if settings.language_enable -%}
          <div class="lang1">{{ block.settings.custom_block | split: '[lang2]' | first }}</div>
          <div class="lang2">{{ block.settings.custom_block | split: '[lang2]' | last }}</div>
          {%- else -%}
          {{ block.settings.custom_block | split: '[lang2]' | first }}
          {%- endif -%}
        </div>
        {%- else -%}
        <div class="col-sm-{{block.settings.item_width_mobile}} col-lg-{{block.settings.item_width_desktop}} col-md-{{block.settings.item_width_tablet}}">
          <div style="display: inline-block; vertical-align: middle;">
            {%- if settings.language_enable -%}
            <div class="lang1">{{ block.settings.custom_block | split: '[lang2]' | first }}</div>
            <div class="lang2">{{ block.settings.custom_block | split: '[lang2]' | last }}</div>
            {%- else -%}
            {{ block.settings.custom_block | split: '[lang2]' | first }}
            {%- endif -%}
          </div>
          <div class="right_top_letter" style="display: inline-block; vertical-align: middle; padding-left: 20px; position: relative;">
            {% include 'header_newsletter' %}
          </div>
        </div>
        {%- endcase -%}
        {%- endfor -%}
        {%- endif -%} 
      </div>
    </div>
  </div>
</div>
{%- if section.settings.show_button != blank -%}
<script type="text/javascript">
  $(document).ready(function() {
    if ('off' === $.cookie('porto_ads_status')) {

    } else {
      $('.porto-block-html-top > div').removeClass('d-none').append('<button class="mfp-close">Ã—</button>');
    }
    $('body').on('click', '.porto-block-html-top .mfp-close', function() {
      $(this).parent().fadeOut();
      $.cookie('porto_ads_status', 'off', { expires : {{section.settings.expires }} });
    });
  }); 
</script>
{%- endif -%}  
