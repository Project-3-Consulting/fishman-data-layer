.header-container.type1 {
  border-top-width: 0;
  .header {padding-top: 0;padding-bottom: 0;}
  .header-center {flex: 1;padding: 20px 15px;} 
  .header-left, .header-right {
    -ms-flex: inherit;
    flex: inherit;
  }
  .header-left {
    min-width: 16%;
    padding: 27px 0; 
  }
  .header-right {
    padding: 22px 0;
  }
  .top-links-container {
    padding: 3px 0 3px;
    font-size: .7857em;
    @media(max-width: 991px){
      padding: 1px 0 1px;
    }
  }
  .top-links-area {
    .links li {
      padding: 2px 15px; 
      font-size: 11px;
      text-align: left;
      text-transform: uppercase;
      white-space: nowrap; 
      font-weight: 600;
      border: none;
      letter-spacing: .025em;
      a {
        font-weight: inherit;
      }
    }
    .links + span { 
      height: 20px;
      line-height: 1; 
      color: transparent;
      width: 1px;
      background: rgba(255,255,255,.18);
      display: inline-block; 
      margin: 0 10px; 
      opacity: .8;
    }
  }
  .top-links-container {
    .currency-wrapper>a,.language-wrapper>a,.compare-link>a {
      border: none;
      border-radius: 3px;
      font-size: 11px;
      font-weight: 600;
      line-height: 24px;
      text-transform: uppercase; 
      letter-spacing: .025em;
      i:before {
        content: '\e81c';
        font-weight: 600;
      }
    }
    .currency-wrapper>a {padding-left: 0;}
    span.split { 
      border-color: #e7e7e7;
      display: none;
    }
  } 
  .main-top-nav {position:relative;} 
  .searchform {
    input[type=text] {
      height: 40px;
      padding: 0 225px 0 20px;
    }
    .searchsubmit { 
      right: 0; 
      width: 46px;  
      color: #606669;
      font-size: 0;
      border-radius: 0 30px 30px 0;
      font-weight: 400;
      &:after {
        font-size: 16px;
        top: 19px;
      }
    }
  }
  .search-by-category {
    right: 45px; 
    .input-dropdown-inner {
      height: 40px;
      border-left: 1px solid #e7e7e7;
      border-right: 1px solid #e7e7e7;
      line-height: 40px;
      min-width: 129px;
      > a {
        padding-left: 10px;
        padding-right: 15px;
        letter-spacing: .005em;
        &:after {
          margin-left: 10px;
        }
      }
    }
  }
  .search-area {
    margin-left: 0;
    margin-right: 0;
    width: 100%; 
    @media(max-width: 575px) {
      display: none;
    }
    .search-extended {
      border-radius: 30px;
      width: 100%; 
    } 
  }
  .top-navigation li.level0 a.level-top {
    padding-top: 18px;
    padding-bottom: 18px;
    > span > .cat-label {top: 0;}
  } 
  .header-contact {
    display: -ms-inline-flexbox;
    display: inline-flex;
    -ms-flex-align: center;
    align-items: center;
    margin: 0;
    padding: 0;
    border-right: none;
    .my-account {padding: 0 .125rem;}
    > a i {display: block; margin: 0 5px;font-size: 27px;}
  }
  .custom-block {
    border: none;
    font-size: 24px;
    padding: 0; 
    @media(max-width: 991px){
      .header-contact > div {display: none;}
    }
  }
  .mini-cart {
    position: relative;
    line-height: 39px;  
  }
  @media (max-width: 991px){ 
    .header-left, .header-right, .header-center{
      padding: 20px 0; 
    }
    .header-center {;flex: none;}
    .header-right {margin-left: 0;}
    .search-icon i:before {font-weight: 600;}
    .search-area.show-icon-tablet .search-extended::before {
      display: block;
      position: absolute;
      top: -22px;
      right: 75px; 
      border-bottom-color: #dfdfdf; 
    }
    .search-area.show-icon-tablet .search-extended {
      right: -75px;
      border-color: #dfdfdf;
      border-width: 4px;
      border-style: solid;
    }
    .menu-icon { 
      margin-right: 8px;
    } 
    .cart-area {margin-left: 20px;} 
    .mini-cart {
      margin-left: .3125rem;
    }
    .top-links-area ul.links {
      right: 23px;
      padding: 5px 0;
      li {
        padding: 2px 0;
        a {
          padding: 0 10px;
        }
      }
    }
  }
  &.sticky-header { 
    .mini-cart .cart-wrapper {right: 0;}
    .header-wrapper {padding: 0;}
    @media (max-width: 991px){
      .header {min-height: 60px;}
      .top-links-container {display: none;}
      .header-left, .header-right, .header-center{
        padding: 0; 
      }
    }
  }
}