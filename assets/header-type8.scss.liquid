.header-container.type8 {
  border-top-width: 0;
  z-index: 9;
  @media (min-width: 992px) { 
    top: 0;
    width: 256px;
    padding: 15px 15px 160px;  
    position: fixed; 
    min-height: 100vh; 
    z-index: 99;
  }
  @media (min-width: 1440px) {
    width: 300px;
    padding-left: 30px;
    padding-right: 30px;
  } 
  &.fixed-bottom {
    @media (min-width: 992px) {
      top: auto;
      bottom: 0;
    }
  }
  .side-top {
    display: flex;
    align-items: center; 
    @media (max-width: 991px) {
      display: none;
    }
    .currency-wrapper,.language-wrapper,.compare-link {
      margin: 0; 
      margin-top: 3px;
      margin-bottom: 3px;
      margin-right: 2.5px;
      >a {
        border: none;
        font-size: .625rem;
        font-weight: 500;
        text-transform: uppercase; 
        letter-spacing: .025em;
        padding: 0 5px 0 0;
        line-height: 26px;
        > span {
          padding-right: 13px;
        }
        i{
          font-size: 1em;
          &:before { 
            font-weight: 600;
          }
        }
      }
    }
    .currency-wrapper>a {padding-left: 0;}
    span.split { 
      border-color: #e7e7e7;
      display: none;
    } 
    .header-contact {
      display: -ms-inline-flexbox;
      display: inline-flex;
      -ms-flex-align: center;
      align-items: center;
      margin: 0;
      padding: 0;
      border-right: none; 
      > a {
        margin-right: .5rem;
        display: inline-block;
        min-width: 32px;
        text-align: center;
        i {display: block;font-size: 20px;}
      }
    } 
  }  
  .header {
    @media (min-width: 992px) {
      padding: 0;
    }
    padding-top: 0;
    padding-bottom: 0;
    position: static; 
    @media (max-width: 991px) { 
      padding-top: 5px;
      padding-bottom: 5px;
    }
    .header-left, .header-right {
      @media (min-width: 992px) {
        justify-content: center; 
      } 
      @media (max-width: 991px) {
        justify-content: flex-start; 
        padding-top: 5px;
        padding-bottom: 5px;
      }
    }
    .header-center {
      flex: 1;
      @media (max-width: 991px) {
        justify-content: flex-end; 
        padding-top: 5px;
        padding-bottom: 5px;
      }
    }
  }
  .menu-icon {
    padding: 0;
    a {
      padding: 7px 13px;
      display: block;
      margin: 8px 0 8px 0;
      line-height: 20px;
    }
  }
  .site-logo {
    @media (min-width: 992px) { 
      margin-top: 30px;
      margin-bottom: 30px;
    }
  }
  .searchform {
    input[type=text] {
      height: 40px;
      padding: 0 16px;
    }
    .searchsubmit { 
      right: 0; 
      width: 38px;  
      color: #606669;
      font-size: 0;
      border-radius: 0 30px 30px 0;
      font-weight: 400;
      &:after {
        font-size: 16px;
      }
    }
  } 
  .search-area {
    margin-left: 0;
    margin-right: 0;  
    @media (min-width: 992px) {
      margin-bottom: 20px;
    }
    order: 0;
    .search-icon {
      font-size: 16px;
      width: 40px;
      i:before {
        font-weight: 600;
      }
    }
    .search-extended {
      @media (min-width: 992px) {
        border: none;
      }
      @media (max-width: 991px) {
        margin-right: 10px;
      }
      border-radius: 30px;
      width: 100%; 
    } 
  }  
  .mini-cart {
    position: relative;
    line-height: 30px;  
    min-width: 32px;
    min-height: 30px;
    @media(min-width: 992px){
      .cart-wrapper {
        right: auto;
        left: 0;
        &::before {
          right: auto;
          left: .7px;
          margin-right: 0;
          margin-left: calc(1px + .5em - 2px);
        }
        &::after {
          right: auto;
          left: 0;
          margin-right: 0;
          margin-left: calc(1px + .5em - 2px);
        }
      }
    }
    @media(max-width: 991px){
      .cart-wrapper { 
        &::before { 
          margin-right: calc(1px + .5em - 2px);
        }
        &::after { 
          margin-right: calc(1px + .5em - 2px);
        }
      }
    }
    .cart-design-3 .icon-cart-header {
      justify-content: center;
      top: 0;
      i {
        font-size: 20px;
      }
      .cart-total { 
        right: -3px;
        top: 0px;
        .cart-qty {
          width: 15px;
          height: 15px;
          line-height: 15px;
          font-size: 9px;
          box-shadow: -1px 1px 2px 0 rgba(0,0,0,.3);
          background-color: #ed5348;
        }
      }
      &:after {display: none;}
    }
  } 
  .main-nav {
    width: 100%;
    >.container {
      padding: 0;
    }
  }
  .main-navigation .top-navigation.side-menu li.level0 {
    @media (min-width: 992px) {
      padding-right: 15px;
      margin-right: -15px;
    }
    @media (min-width: 1440px) {
      padding-right: 30px;
      margin-right: -30px;
    }
    a.level-top { 
      border-color: transparent;
      margin: 0;
      letter-spacing: -.3px;
      line-height: 20px;
      padding: 11.5px 5px;
      border-top-width: 1px;
      &:after {
        opacity: .4;
        right: 5px;
      }
    }
  }
  .side-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    margin: 20px 10px; 
    @media (max-width: 991px) {
      display: none;
    }
    .header-contact {
      margin: 5px 0 20px 0;
      white-space: normal;
      font-size: 1.125rem;
      font-weight: 700;
    }
    .share-links {
      margin: 0 0 16px;
      a {
        font-size: 1rem;
        margin-left: .5rem;
        margin-right: .5rem;
      }
    }
  }
  &.sticky-header {  
    
  }
}