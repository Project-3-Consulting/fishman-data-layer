{% include 'header-top-bar' %}
<div class="header container">
  <div class="header-left"> 
    <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div>
    {% include 'header-logo' %} 
  </div> 
  <div class="header-center">
    <div class="search-area show-icon-tablet">
      <a href="javascript:void(0);" class="search-icon"><span><i class="icon-magnifier"></i></span></a>
      {% include 'header-search' %}
    </div>
  </div>
  <div class="header-right">
    <div class="cart-area"> 
      {% if settings.header_custom_text != '' %}
      <div class="custom-block">
        {% if settings.language_enable %}
        <div class="lang1">{{ settings.header_custom_text | split: '[lang2]' | first }}</div>
        <div class="lang2">{{ settings.header_custom_text | split: '[lang2]' | last }}</div>
        {% else %}
        {{ settings.header_custom_text | split: '[lang2]' | first }}
        {% endif %}
      </div>
      {% endif %}  
      <div class="mini-cart">
        {% include 'header-cart' %}
      </div>
    </div> 
  </div> 
</div>  
<div class="header-wrapper">
  <div class="main-nav wrapper-top-menu">
    <div class="container"> 
      <div class="row">
        <div class="col-lg-3">
          <div class="toggle-menu">
            <div class="menu-container category-menu-style-default_new">
              <a href="javascript:void(0)">
                <i class="fa fa-bars"></i>
                {% if settings.header_category_text != '' %}
                {% if settings.language_enable %}
                <span class="lang1">{{ settings.header_category_text  | split: '|' | first }}</span>
                <span class="lang2">{{ settings.header_category_text  | split: '|' | last }}</span>
                {% else %}
                {{ settings.header_category_text  | split: '|' | first }}
                {% endif %}
                {% endif %}
              </a>
              <!-- Main Menu -->
              {% include 'side-menu' %}
              <!-- End Main Menu -->
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="custom-menu-block"> 
            {%- if settings.language_enable -%}
            <div class="lang1">
              {%- assign content_lg1 = settings.custom_block_2 | split: '[lang2]' | first -%}
              {% include 'shortcode' load: content_lg1 %}
            </div>
            <div class="lang2">
              {%- assign content_lg2 = settings.custom_block_2 | split: '[lang2]' | last -%}
              {% include 'shortcode' load: content_lg2 %} 
            </div>
            {%- else -%}
            {%- assign content_lg = settings.custom_block_2 | split: '[lang2]' | first -%}
            {% include 'shortcode' load: content_lg %}
            {%- endif -%}  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>